# Elasticsearch configuration
# Generated by Ansible - do not edit manually

# ======================== Elasticsearch Configuration =========================
#
# NOTE: Elasticsearch comes with reasonable defaults for most settings.
#       Before you set out to tweak and tune the configuration, make sure you
#       understand what are you trying to accomplish and the consequences.

# ---------------------------------- Cluster -----------------------------------
#
# Use a descriptive name for your cluster:
#
cluster.name: {{ elasticsearch_cluster_name | default('elasticsearch') }}

# ------------------------------------ Node ------------------------------------
#
# Use a descriptive name for the node:
#
node.name: {{ elasticsearch_node_name | default(ansible_hostname) }}

# ----------------------------------- Paths ------------------------------------
#
# Path to directory where to store the data (separate multiple locations by comma):
#
path.data: /var/lib/elasticsearch

# Path to log files:
#
path.logs: /var/log/elasticsearch

# ----------------------------------- Memory -----------------------------------
#
# Lock the memory on startup:
#
bootstrap.memory_lock: {{ elasticsearch_bootstrap_memory_lock | default('false') }}

# ---------------------------------- Network -----------------------------------
#
# By default Elasticsearch is only accessible on localhost. Set a different
# address here to expose this node on the network:
#
network.host: {{ elasticsearch_localhost_bind | default('127.0.0.1') }}, {{ elasticsearch_bind_ip | default('0.0.0.0') }}

# By default Elasticsearch listens for HTTP traffic on the first free port it
# finds starting at 9200. Set a specific HTTP port here:
#
http.port: {{ elasticsearch_http_port | default('9200') }}

# --------------------------------- Discovery ----------------------------------
#
# Pass an initial list of hosts to perform discovery when this node is started:
# The default list of hosts is ["127.0.0.1", "[::1]"]
#
discovery.type: {{ elasticsearch_discovery_type | default('single-node') }}

# For a resililient, production deployment, a minimum of 3 master-eligible nodes
# are required. For development and testing, it is sufficient to start with a
# single node.

# ---------------------------------- Security -----------------------------------
#
# Enable security features (requires appropriate license):
#
xpack.security.enabled: {{ elasticsearch_security_enabled | default('false') | lower }}

# ---------------------------------- Various -----------------------------------
#
# Require explicit names when deleting indices:
#
action.destructive_requires_name: {{ elasticsearch_require_explicit_index_names | default('true') }}

